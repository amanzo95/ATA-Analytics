<Window x:Class="ATA_Analisis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATA_Analisis"
        mc:Ignorable="d"
        Title="GK Analytics" Height="450" Width="800">
    <Grid Background="#FF02271E">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="MRP">
                <MenuItem x:Name="BOMComparison" 
                          Header="Comparar MRP"
                          Click="BOMComparison_Click"/>
            </MenuItem>
        </Menu>

        <DockPanel x:Name="WindowContainer" Grid.Row="1" Margin="1">
            <DockPanel.Background>
                <ImageBrush ImageSource="/GK_Logo.png" Stretch="Uniform"/>
            </DockPanel.Background>
        </DockPanel>
    </Grid>
</Window>
